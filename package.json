{
  "name": "@hoci/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "hook ui .",
  "author": "chizuki",
  "license": "MIT",
  "keywords": [
    "vue",
    "hooks"
  ],
  "files": [
    "dist/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "pnpm -r --parallel --filter=./packages/** build",
    "stub": "pnpm -r --parallel --filter=./packages/**  run stub",
    "lint": "eslint ./packages/ --ext .ts",
    "test": "pnpm stub && vitest",
    "dev": "vite playground",
    "bump": "bumpp package.json packages/*/package.json --commit --push --tag",
    "pub": "pnpm build && pnpm -r publish --access public --no-git-checks --registry https://registry.npmjs.org/",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx simple-git-hooks",
    "prepublish": "pnpm build",
    "up": "taze major",
    "regit": "git fetch --all && git reset --hard origin/main && git pull && git remote prune origin"
  },
  "devDependencies": {
    "@curev/eslint-config": "^0.2.1",
    "@types/node": "^20.5.9",
    "bumpp": "^9.2.0",
    "eslint": "^8.48.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.11.2",
    "typescript": "^5.2.2",
    "unbuild": "^2.0.0",
    "vitest": "^0.34.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "tslx": "^0.1.0"
  }
}
