{
  "name": "hoci",
  "type": "module",
  "version": "0.8.1",
  "description": "a headless component library for vue3",
  "author": "Chizuki <chizukicn@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chizukicn/hoci"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./resolver": {
      "import": "./dist/resolver.js",
      "require": "./dist/resolver.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsdown",
    "prepublish": "pnpm build"
  },
  "peerDependencies": {
    "unplugin-vue-components": "^0.25.2 || ^0.27.0 || ^28.0.0 || ^29.0.0 || ^30.0.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@hoci/components": "workspace:*",
    "@hoci/core": "workspace:*"
  },
  "optionalDependencies": {
    "unplugin-vue-components": "catalog:"
  }
}
